<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/score"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:text="You got [DISPLAY SCORE]!" />

    <ImageView
        android:id="@+id/victorySticker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/victory" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chooseAnotherGame"
        android:layout_alignEnd="@+id/victorySticker"
        android:onClick="playAgain"
        android:paddingBottom="15dp"
        android:text="Play Again" />

    <Button
        android:id="@+id/chooseAnotherGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="chooseAnotherGame"
        android:paddingBottom="15dp"
        android:text="Choose Another Game" />

</RelativeLayout>